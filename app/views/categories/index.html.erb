<div class="row">
  <div class="col s12">
    <p id="notice"><%= notice %></p>

<h1 class="col s12 m6">Categories</h1>
    <%= link_to(new_category_path,
                class: 'btn-floating btn-large waves-effect waves-light red right index-add') do %>
        <i class="material-icons">add</i>
        <!--<a class="waves-effect waves-light btn" href="#add-modal">Modal-->
        <!--<i class="large material-icons">mode_edit</i>-->
        <!--</a>-->
    <% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'View', category, :class => 'waves-effect waves-light btn' %></td>
        <td><%= link_to 'Edit', edit_category_path(category), :class => 'waves-effect waves-light btn' %></td>
        <td><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'waves-effect waves-light btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>